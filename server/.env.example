PORT=4000
JWT_SECRET=change_this_to_a_long_random_string

# Google OAuth (for recruiter login)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_OAUTH_CALLBACK=http://localhost:4000/auth/google/callback   # change to https://your-render-domain/auth/google/callback when deployed

# Service account JSON file path (server will read this)
GOOGLE_SERVICE_ACCOUNT_FILE=./google-service-account.json

# Google Drive & Sheets
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id_for_resumes
GOOGLE_SHEET_ID=your_google_sheet_id_for_responses

# Optional: Admin emails (comma-separated) to give admin role immediately on first login
ADMIN_EMAILS=you@company.com
